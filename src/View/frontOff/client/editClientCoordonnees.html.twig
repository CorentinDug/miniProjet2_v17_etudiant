{% extends "layout.html.twig" %}
{% block contenu %}
    <form method="post" action="{{ path('client.validFormEditClient') }}">
        <div class="row">

            {% if errors is defined %}
                <div data-alert class="alert-box alert round">

                    {% for error in errors %}
                        <li>{{ error.getPropertyPath }} : {{ error.getMessage }}</li>
                    {% endfor %}

                    <a href="#" class="close">&times;</a>
                </div>
            {% endif %}

            <fieldset>
                <legend>Modifier vos coordonn√©es  (avec twig)</legend>
                <input name="id"  type="hidden" value="{{donnees.id}}" />
                <label>Nom :
                    <input name="nom"  type="text"  size="18" value="{{donnees.nom}}" />
                    {% if erreurs.nom is defined %}
                        <small class="error">{{erreurs.nom}}</small>
                    {% endif %}
                </label>
                <label>Pseudo :
                    <input name="username"  type="text"  size="18" value="{{donnees.username}}" />
                    {% if erreurs.username is defined %}
                        <small class="error">{{erreurs.username}}</small>
                    {% endif %}
                </label>
                <label>Code postal
                    <input name="code_postal"  type="text"  size="18" 	value="{{donnees.code_postal}}"/>
                    {% if erreurs.code_postal is defined %}
                        <small class="error">{{erreurs.code_postal}}</small>
                    {% endif %}
                    {% if errors.code_postal is defined %}
                        <small class="error">message 2{{errors.code_postal.message}}</small>
                    {% endif %}
                </label>
                <label>Ville
                    <input name="ville"  type="text"  size="18" value="{{donnees.adresse}}"/>
                    {% if erreurs.adresse is defined %}
                        <small class="error">{{erreurs.adresse}}</small>
                    {% endif %}
                </label>
                <label>Adresse
                    <input name="adresse"  type="text"  size="18" value="{{donnees.adresse}}"/>
                    {% if erreurs.adresse is defined %}
                        <small class="error">{{erreurs.adresse}}</small>
                    {% endif %}
                </label>

                <input type="hidden" id="_method" name="_method" value="put" />

                <input type="submit" name="modifierClient" value="Modifier" />
            </fieldset>
        </div>
    </form>
{% endblock %}
